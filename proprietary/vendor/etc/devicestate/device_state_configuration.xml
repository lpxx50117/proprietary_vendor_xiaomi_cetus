<device-state-config>
  <device-state>
    <identifier>0</identifier>
    <name>CLOSED</name>
    <conditions>
      <sensor>
        <type>xiaomi.sensor.fold_status</type>
        <name>fold_status FOLD_STATUS Wakeup</name>
        <value>
          <min>0</min>
        </value>
      </sensor>
    </conditions>
  </device-state>
  <device-state>
    <identifier>3</identifier>
    <name>OPENED</name>
    <conditions>
      <sensor>
        <type>xiaomi.sensor.fold_status</type>
        <name>fold_status FOLD_STATUS Wakeup</name>
        <value>
          <max>1</max>
        </value>
      </sensor>
    </conditions>
  </device-state>
  <device-state>
    <identifier>4</identifier>
    <name>OPENED_REVERSE</name>
  </device-state>
  <device-state>
    <identifier>5</identifier>
    <name>OPENED_PRESENTATION</name>
  </device-state>
  <device-state>
    <identifier>6</identifier>
    <name>OPENED_REVERSE_PRESENTATION</name>
  </device-state>
</device-state-config>
